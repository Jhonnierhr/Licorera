@model Licorera.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoría";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Categorías</a></li>
                <li class="breadcrumb-item active">Editar Categoría</li>
            </ol>
        </nav>
        <h1 class="h3 mb-2">Editar Categoría</h1>
        <p class="text-muted">Modifique los datos de la categoría</p>
    </div>

    <!-- Form Card -->
    <div class="card">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="CategoriaId" />
                
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label">Nombre de la Categoría</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-tag"></i>
                        </span>
                        <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre de la categoría" />
                    </div>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-light">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
