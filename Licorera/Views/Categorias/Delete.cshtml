@model Licorera.Models.Categoria

@{
    ViewData["Title"] = "Eliminar Categoría";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="page-header">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Categorías</a></li>
                <li class="breadcrumb-item active">Eliminar</li>
            </ol>
        </nav>
        <h1>Eliminar Categoría</h1>
        <p class="text-muted">¿Está seguro que desea eliminar esta categoría?</p>
    </div>

    <div class="row">
        <div class="col-md-8">
            <!-- Delete Warning -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="delete-warning text-center">
                        <i class="fas fa-exclamation-triangle d-block mb-3"></i>
                        <h4 class="text-danger mb-3">Advertencia</h4>
                        <p class="mb-0">Esta acción no se puede deshacer. Se eliminarán todos los datos asociados a esta categoría.</p>
                    </div>
                </div>
            </div>

            <!-- Category Details -->
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-info-circle me-2"></i>Detalles de la Categoría</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="detail-group">
                                <div class="detail-label">ID de Categoría</div>
                                <div class="detail-value">#@Html.DisplayFor(model => model.CategoriaId)</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-group">
                                <div class="detail-label">Nombre</div>
                                <div class="detail-value">@Html.DisplayFor(model => model.Nombre)</div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="CategoriaId" />
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-light">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt me-2"></i>Eliminar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Related Info -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-exclamation-circle me-2"></i>Importante</h5>
                </div>
                <div class="card-body">
                    <h6>Antes de eliminar:</h6>
                    <ul class="text-muted">
                        <li>Verifique que no hay productos asociados</li>
                        <li>Respalde la información si es necesario</li>
                        <li>Esta acción es permanente</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
