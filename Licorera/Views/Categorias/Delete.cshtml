@model Licorera.Models.Categoria

@{
    ViewData["Title"] = "Eliminar Categoría";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Categorías</a></li>
                <li class="breadcrumb-item active">Eliminar</li>
            </ol>
        </nav>
        <h1 class="h3 mb-2">Eliminar Categoría</h1>
        <p class="text-muted">¿Está seguro que desea eliminar esta categoría?</p>
    </div>

    <!-- Delete Card -->
    <div class="card">
        <div class="card-body">
            <div class="alert alert-warning mb-4" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Esta acción no se puede deshacer. Se eliminarán todos los datos asociados a esta categoría.
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-4">
                        <h6 class="text-muted mb-2">Nombre de la Categoría</h6>
                        <p class="h5">@Html.DisplayFor(model => model.Nombre)</p>
                    </div>

                    <div class="mb-4">
                        <h6 class="text-muted mb-2">ID de la Categoría</h6>
                        <p class="h5">#@Html.DisplayFor(model => model.CategoriaId)</p>
                    </div>

                    <div class="mb-4">
                        <h6 class="text-muted mb-2">Productos Asociados</h6>
                        <p class="h5">@(Model.Productos?.Count ?? 0) productos</p>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="CategoriaId" />
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-light">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-2"></i>Eliminar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
