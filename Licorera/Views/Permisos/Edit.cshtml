@model Licorera.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var roles = ViewBag.Roles as List<Licorera.Models.Role>;
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1><i class="fas fa-user-edit me-2"></i>Editar Usuario</h1>
        <p>Modifica la información del usuario</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Volver a la Lista
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-user-edit me-2"></i>Editar Información - @Model.Nombre
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="UsuarioId" />
                    <input type="hidden" asp-for="CreatedAt" />
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Nombre" class="form-label">
                                    <i class="fas fa-user me-1"></i>Nombre Completo
                                </label>
                                <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre completo" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">
                                    <i class="fas fa-envelope me-1"></i>Email
                                </label>
                                <input asp-for="Email" class="form-control" type="email" placeholder="usuario@ejemplo.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="Password" class="form-label">
                                    <i class="fas fa-lock me-1"></i>Nueva Contraseña
                                </label>
                                <input name="Password" type="password" class="form-control" placeholder="Dejar vacío para mantener actual" />
                                <div class="form-text">Solo completa si deseas cambiar la contraseña</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="RolId" class="form-label">
                                    <i class="fas fa-shield-alt me-1"></i>Rol
                                </label>
                                <select asp-for="RolId" class="form-select">
                                    <option value="">Seleccionar rol...</option>
                                    @foreach (var rol in roles)
                                    {
                                        <option value="@rol.RolId" selected="@(rol.RolId == Model.RolId)">@rol.Nombre</option>
                                    }
                                </select>
                                <span asp-validation-for="RolId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Información:</strong>
                        <ul class="mb-0 mt-2">
                            <li>Solo completa la contraseña si deseas cambiarla</li>
                            <li>El cambio de rol afectará los permisos del usuario</li>
                            <li>El usuario será notificado de los cambios</li>
                        </ul>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Guardar Cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}