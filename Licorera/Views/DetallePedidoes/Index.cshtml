@model IEnumerable<Licorera.Models.DetallePedido>

@{
    ViewData["Title"] = "Detalles de Pedidos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1><i class="fas fa-list-ul me-2"></i>Detalles de Pedidos</h1>
        <p>Administra los detalles de los pedidos</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Agregar Detalle
    </a>
</div>

<div class="table-container">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th><i class="fas fa-sort-numeric-up me-2"></i>@Html.DisplayNameFor(model => model.Cantidad)</th>
                    <th><i class="fas fa-dollar-sign me-2"></i>@Html.DisplayNameFor(model => model.PrecioUnitario)</th>
                    <th><i class="fas fa-calculator me-2"></i>Total</th>
                    <th><i class="fas fa-clipboard-list me-2"></i>@Html.DisplayNameFor(model => model.Pedido)</th>
                    <th><i class="fas fa-wine-bottle me-2"></i>@Html.DisplayNameFor(model => model.Producto)</th>
                    <th width="120" class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <i class="fas fa-sort-numeric-up text-muted me-2"></i>
                                <strong>@Html.DisplayFor(modelItem => item.Cantidad) unidades</strong>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <i class="fas fa-dollar-sign text-success me-2"></i>
                                <span class="text-success">$@Html.DisplayFor(modelItem => item.PrecioUnitario)</span>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <i class="fas fa-calculator text-primary me-2"></i>
                                <strong class="text-primary">$@(item.Cantidad * item.PrecioUnitario)</strong>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="icon-wrapper me-2" style="width: 32px; height: 32px; font-size: 0.8rem;">
                                    <i class="fas fa-clipboard-list"></i>
                                </div>
                                <div>
                                    <span>Pedido #@Html.DisplayFor(modelItem => item.Pedido.PedidoId)</span>
                                    <small class="text-muted d-block">@(item.Pedido.Fecha?.ToString("dd/MM/yyyy") ?? "N/A")</small>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="icon-wrapper me-2" style="width: 32px; height: 32px; font-size: 0.8rem;">
                                    <i class="fas fa-wine-glass"></i>
                                </div>
                                <div>
                                    <span>@Html.DisplayFor(modelItem => item.Producto.Nombre)</span>
                                    <small class="text-muted d-block">ID: @Html.DisplayFor(modelItem => item.Producto.ProductoId)</small>
                                </div>
                            </div>
                        </td>
                        <td class="text-center">
                            <div class="action-buttons">
                                <a asp-action="Details" asp-route-id="@item.DetalleId" 
                                   class="btn btn-sm btn-outline-info" title="Ver detalles">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.DetalleId" 
                                   class="btn btn-sm btn-outline-primary" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.DetalleId" 
                                   class="btn btn-sm btn-outline-danger" title="Eliminar">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center mt-5">
        <div class="mb-3">
            <i class="fas fa-list-ul text-muted" style="font-size: 4rem;"></i>
        </div>
        <h4 class="text-muted">No hay detalles de pedidos</h4>
        <p class="text-muted">Comienza agregando detalles a los pedidos</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Agregar Primer Detalle
        </a>
    </div>
}
