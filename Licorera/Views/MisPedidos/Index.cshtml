@model IEnumerable<Licorera.Models.Pedido>

@{
    ViewData["Title"] = "Mis Pedidos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1><i class="fas fa-box me-2"></i>Mis Pedidos</h1>
    <p>Historial completo de todos tus pedidos realizados</p>
</div>

<div class="row">
    @foreach (var pedido in Model)
    {
        <div class="col-lg-6 mb-4">
            <div class="card @(pedido.EliminadoPorAdmin ? "border-muted" : "")">
                @if (pedido.EliminadoPorAdmin)
                {
                    <div class="card-header bg-light text-muted">
                        <div class="d-flex justify-content-between align-items-center">
                            <span>
                                <i class="fas fa-archive me-2"></i>
                                <strong>Pedido Archivado #@pedido.PedidoId</strong>
                            </span>
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                Archivado por administración
                            </small>
                        </div>
                    </div>
                }
                else
                {
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <strong>Pedido #@pedido.PedidoId</strong>
                            @{
                                var estadoClass = pedido.Estado?.ToLower() switch
                                {
                                    "completado" => "badge bg-success",
                                    "pendiente" => "badge bg-warning text-dark",
                                    "en proceso" => "badge bg-info",
                                    "enviado" => "badge bg-primary",
                                    "cancelado" => "badge bg-danger",
                                    "eliminado" => "badge bg-secondary",
                                    _ => "badge bg-secondary"
                                };
                            }
                            <span class="@estadoClass">@pedido.Estado</span>
                        </div>
                    </div>
                }
                
                <div class="card-body @(pedido.EliminadoPorAdmin ? "text-muted" : "")">
                    <div class="row">
                        <div class="col-6">
                            <small class="text-muted">Fecha:</small>
                            <div><i class="fas fa-calendar me-2"></i>@pedido.Fecha?.ToString("dd/MM/yyyy")</div>
                        </div>
                        <div class="col-6">
                            <small class="text-muted">Total:</small>
                            <div class="@(pedido.EliminadoPorAdmin ? "text-muted" : "text-success")">
                                <i class="fas fa-dollar-sign me-2"></i>
                                <strong>$@pedido.Total.ToString("N0")</strong>
                            </div>
                        </div>
                    </div>
                    
                    @if (!pedido.EliminadoPorAdmin)
                    {
                        <div class="mt-3">
                            <a asp-action="Detalles" asp-route-id="@pedido.PedidoId" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye me-2"></i>Ver Detalles
                            </a>
                            
                            @if (pedido.Estado == "Pendiente")
                            {
                                <button class="btn btn-outline-danger btn-sm btn-cancelar-pedido" 
                                        data-pedido-id="@pedido.PedidoId">
                                    <i class="fas fa-times me-2"></i>Cancelar
                                </button>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="mt-3">
                            <a asp-action="Detalles" asp-route-id="@pedido.PedidoId" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-eye me-2"></i>Ver Detalles del Archivo
                            </a>
                            <small class="text-muted d-block mt-2">
                                <i class="fas fa-info-circle me-1"></i>
                                Este pedido fue archivado por administración, pero conservas el historial para tus registros.
                            </small>
                        </div>
                    }
                    
                    @if (pedido.DetallePedidos != null && pedido.DetallePedidos.Any())
                    {
                        <hr>
                        <div class="row">
                            <div class="col-12">
                                <small class="text-muted">Productos:</small>
                                <div class="mt-2">
                                    @foreach (var detalle in pedido.DetallePedidos.Take(3))
                                    {
                                        <span class="badge @(pedido.EliminadoPorAdmin ? "bg-light text-dark" : "bg-light text-dark") me-2 mb-1">
                                            @detalle.Producto?.Nombre (@detalle.Cantidad)
                                        </span>
                                    }
                                    @if (pedido.DetallePedidos.Count > 3)
                                    {
                                        <span class="badge @(pedido.EliminadoPorAdmin ? "bg-muted" : "bg-secondary")">
                                            +@(pedido.DetallePedidos.Count - 3) más
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center mt-5">
        <div class="mb-3">
            <i class="fas fa-box text-muted" style="font-size: 4rem;"></i>
        </div>
        <h4 class="text-muted">No tienes pedidos aún</h4>
        <p class="text-muted">¡Explora nuestro catálogo y realiza tu primera compra!</p>
        <a asp-controller="Catalogo" asp-action="Index" class="btn btn-primary">
            <i class="fas fa-wine-glass me-2"></i>Explorar Catálogo
        </a>
    </div>
}

@if (Model.Any(p => p.EliminadoPorAdmin))
{
    <div class="alert alert-info mt-4">
        <h6 class="alert-heading">
            <i class="fas fa-info-circle me-2"></i>
            Información sobre Pedidos Archivados
        </h6>
        <p class="mb-0">
            Los pedidos marcados como "Archivados" fueron gestionados por nuestro equipo administrativo, 
            pero mantienes acceso a toda la información para tus registros personales. 
            Si tienes preguntas sobre estos pedidos, puedes contactarnos.
        </p>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.btn-cancelar-pedido').click(function() {
                var pedidoId = $(this).data('pedido-id');
                
                if (confirm('¿Estás seguro de que quieres cancelar este pedido?')) {
                    $.ajax({
                        url: '@Url.Action("CancelarPedido", "MisPedidos")',
                        type: 'POST',
                        data: { id: pedidoId },
                        success: function(response) {
                            if (response.success) {
                                toastr.success(response.message);
                                location.reload();
                            } else {
                                toastr.error(response.message);
                            }
                        },
                        error: function() {
                            toastr.error('Error al cancelar el pedido');
                        }
                    });
                }
            });
        });
    </script>
}