@{
    ViewData["Title"] = "Acceso Denegado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid d-flex justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="text-center">
        <div class="mb-4">
            <i class="fas fa-shield-alt text-warning" style="font-size: 5rem; opacity: 0.8;"></i>
        </div>
        <h1 class="display-4 mb-3 text-danger">Acceso Denegado</h1>
        <div class="alert alert-warning mx-auto" style="max-width: 500px;">
            <h4 class="alert-heading">
                <i class="fas fa-exclamation-triangle me-2"></i>¡Ups! No tienes permisos
            </h4>
            <p class="mb-3">No tienes los permisos necesarios para acceder a esta página. Tu rol actual no permite el acceso a este recurso.</p>
            <hr>
            <p class="mb-0">
                <small>Si crees que esto es un error, contacta al administrador del sistema.</small>
            </p>
        </div>
        
        <div class="mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg me-3">
                <i class="fas fa-home me-2"></i>Volver al Dashboard
            </a>
            
            @if (User.IsInRole("Cliente"))
            {
                <a asp-controller="Catalogo" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="fas fa-wine-glass me-2"></i>Ver Catálogo
                </a>
            }
            else if (User.IsInRole("Vendedor"))
            {
                <a asp-controller="Ventas" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="fas fa-cash-register me-2"></i>Ir a Ventas
                </a>
            }
            else if (User.IsInRole("Admin"))
            {
                <a asp-controller="Permisos" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="fas fa-users-cog me-2"></i>Gestión de Usuarios
                </a>
            }
        </div>

        <div class="mt-5">
            <div class="card mx-auto" style="max-width: 400px;">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Tu información de sesión
                    </h6>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <strong>Usuario:</strong> @User.Identity.Name<br>
                        <strong>Rol:</strong> 
                        @if (User.IsInRole("Admin"))
                        {
                            <span class="badge bg-warning text-dark">Administrador</span>
                        }
                        else if (User.IsInRole("Vendedor"))
                        {
                            <span class="badge bg-success">Vendedor</span>
                        }
                        else if (User.IsInRole("Cliente"))
                        {
                            <span class="badge bg-primary">Cliente</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Sin rol asignado</span>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Show error message with toastr if available
            if (typeof toastr !== 'undefined') {
                toastr.error('No tienes permisos para acceder a esta página', 'Acceso Denegado', {
                    timeOut: 5000,
                    extendedTimeOut: 2000
                });
            }
        });
    </script>
}