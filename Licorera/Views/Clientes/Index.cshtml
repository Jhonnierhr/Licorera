@model IEnumerable<Licorera.Models.Cliente>

@{
    ViewData["Title"] = "Gestión de Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1><i class="fas fa-users me-2"></i>Gestión de Clientes</h1>
        <p>Administra la base de datos de clientes</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-user-plus me-2"></i>Registrar Cliente
    </a>
</div>

<div class="table-container">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th><i class="fas fa-user me-2"></i>Cliente</th>
                    <th><i class="fas fa-envelope me-2"></i>@Html.DisplayNameFor(model => model.Email)</th>
                    <th><i class="fas fa-phone me-2"></i>@Html.DisplayNameFor(model => model.Telefono)</th>
                    <th><i class="fas fa-map-marker-alt me-2"></i>@Html.DisplayNameFor(model => model.Direccion)</th>
                    <th><i class="fas fa-calendar me-2"></i>Registrado</th>
                    <th width="120" class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="icon-wrapper me-3" style="width: 40px; height: 40px;">
                                    <i class="fas fa-user-circle"></i>
                                </div>
                                <div>
                                    <strong>@Html.DisplayFor(modelItem => item.Nombre)</strong>
                                    <small class="text-muted d-block">ID: @item.ClienteId</small>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <i class="fas fa-envelope text-muted me-2"></i>
                                @Html.DisplayFor(modelItem => item.Email)
                            </div>
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <i class="fas fa-phone text-muted me-2"></i>
                                @(string.IsNullOrEmpty(item.Telefono) ? "N/A" : item.Telefono)
                            </div>
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <i class="fas fa-map-marker-alt text-muted me-2"></i>
                                <span title="@item.Direccion">
                                    @(string.IsNullOrEmpty(item.Direccion) ? "N/A" : 
                                        item.Direccion.Length > 30 ? item.Direccion.Substring(0, 30) + "..." : item.Direccion)
                                </span>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <i class="fas fa-calendar text-muted me-2"></i>
                                @(item.CreatedAt?.ToString("dd/MM/yyyy") ?? "N/A")
                            </div>
                        </td>
                        <td class="text-center">
                            <div class="action-buttons">
                                <a asp-action="Details" asp-route-id="@item.ClienteId" 
                                   class="btn btn-sm btn-outline-info" title="Ver detalles">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.ClienteId" 
                                   class="btn btn-sm btn-outline-primary" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ClienteId" 
                                   class="btn btn-sm btn-outline-danger" title="Eliminar">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center mt-5">
        <div class="mb-3">
            <i class="fas fa-users text-muted" style="font-size: 4rem;"></i>
        </div>
        <h4 class="text-muted">No hay clientes registrados</h4>
        <p class="text-muted">Comienza registrando tu primer cliente</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-user-plus me-2"></i>Registrar Primer Cliente
        </a>
    </div>
}
