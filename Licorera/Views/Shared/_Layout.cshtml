<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Grandma's Liqueurs</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Licorera.styles.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">
    @if (User.Identity.IsAuthenticated)
    {
        <div class="d-flex flex-fill">
            <!-- Sidebar for authenticated users -->
            <div class="sidebar">
                <div class="sidebar-header">
                    <i class="fas fa-wine-bottle"></i>
                    <span>Grandma's Liqueurs</span>
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")"
                            asp-controller="Home" asp-action="Index">
                            <i class="fas fa-chart-line"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>

                    @if (User.IsInRole("Admin"))
                    {
                        <!-- Unified User Management -->
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Permisos" ? "active" : "")"
                                asp-controller="Permisos" asp-action="Index">
                                <i class="fas fa-users-cog"></i>
                                <span>Gestión de Usuarios</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Compras" ? "active" : "")"
                                asp-controller="Compras" asp-action="Index">
                                <i class="fas fa-shopping-cart"></i>
                                <span>Compras</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Ventas" ? "active" : "")"
                                asp-controller="Ventas" asp-action="Index">
                                <i class="fas fa-cash-register"></i>
                                <span>Ventas</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Pedidos" ? "active" : "")"
                                asp-controller="Pedidoes" asp-action="Index">
                                <i class="fas fa-clipboard-list"></i>
                                <span>Pedidos</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Categorias" ? "active" : "")"
                                asp-controller="Categorias" asp-action="Index">
                                <i class="fas fa-tags"></i>
                                <span>Categorías</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Productoes" ? "active" : "")"
                                asp-controller="Productoes" asp-action="Index">
                                <i class="fas fa-wine-bottle"></i>
                                <span>Productos</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Clientes" ? "active" : "")"
                                asp-controller="Clientes" asp-action="Index">
                                <i class="fas fa-user-friends"></i>
                                <span>Clientes</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Proveedores" ? "active" : "")"
                                asp-controller="Proveedores" asp-action="Index">
                                <i class="fas fa-truck"></i>
                                <span>Proveedores</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Configuracion" ? "active" : "")"
                                asp-controller="Configuracion" asp-action="Index">
                                <i class="fas fa-cogs"></i>
                                <span>Configuración</span>
                            </a>
                        </li>
                        <!-- Enlace de prueba de emails (solo para desarrollo/testing) -->
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "EmailTest" ? "active" : "")"
                                asp-controller="EmailTest" asp-action="Index">
                                <i class="fas fa-envelope-open-text"></i>
                                <span>Prueba de Emails</span>
                                <small class="text-muted d-block ms-4">🧪 Test</small>
                            </a>
                        </li>
                    }
                    else if (User.IsInRole("Vendedor"))
                    {
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Ventas" ? "active" : "")"
                                asp-controller="Ventas" asp-action="Index">
                                <i class="fas fa-cash-register"></i>
                                <span>Gestión de Ventas</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Pedidoes" ? "active" : "")"
                                asp-controller="Pedidoes" asp-action="Index">
                                <i class="fas fa-clipboard-list"></i>
                                <span>Pedidos</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Clientes" ? "active" : "")"
                                asp-controller="Clientes" asp-action="Index">
                                <i class="fas fa-user-friends"></i>
                                <span>Clientes</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Productoes" ? "active" : "")"
                                asp-controller="Productoes" asp-action="Index">
                                <i class="fas fa-wine-bottle"></i>
                                <span>Productos</span>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Catalogo" ? "active" : "")"
                                asp-controller="Catalogo" asp-action="Index">
                                <i class="fas fa-wine-glass"></i>
                                <span>Catálogo</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Carrito" ? "active" : "")"
                                asp-controller="Carrito" asp-action="Index">
                                <i class="fas fa-shopping-cart"></i>
                                <span>Mi Carrito</span>
                                <span class="badge bg-secondary ms-2" id="carrito-contador">0</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "MisPedidos" ? "active" : "")"
                                asp-controller="MisPedidos" asp-action="Index">
                                <i class="fas fa-box"></i>
                                <span>Mis Pedidos</span>
                            </a>
                        </li>
                    }
                </ul>
            </div>

            <!-- Main Content for authenticated users -->
            <div class="main-content flex-fill">
                <nav class="navbar navbar-expand navbar-light">
                    <div class="container-fluid">
                        <div class="navbar-nav ms-auto">
                            <div class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                    data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle"></i>
                                    <span>@User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-user"></i> Mi Perfil</a></li>
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-cog"></i> Configuración</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item">
                                                <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </nav>

                <div class="container-fluid content-wrapper">
                    @if (ViewContext.RouteData.Values["Controller"].ToString() != "Home")
                    {
                        <nav aria-label="breadcrumb" class="mb-4">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                                <li class="breadcrumb-item active">@ViewContext.RouteData.Values["Controller"].ToString()
                                </li>
                            </ol>
                        </nav>
                    }

                    <!-- Success and Error Messages -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @RenderBody()
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="d-flex flex-column flex-fill">
            <!-- Public Navigation -->
            <nav class="navbar navbar-expand-lg navbar-dark">
                <div class="container">
                    <a class="navbar-brand" href="/">
                        <i class="fas fa-wine-bottle"></i>
                        Grandma's Liqueurs
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#about">Nosotros</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#products">Productos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#contact">Contacto</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-primary ms-2" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesión
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-primary ms-2" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus me-2"></i>Registrarse
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <!-- Main Content Area -->
            <main class="flex-grow-1">
                @RenderBody()
            </main>

            <!-- Public Footer -->
            <footer class="footer">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4">
                            <h5><i class="fas fa-wine-bottle me-2"></i>Grandma's Liqueurs</h5>
                            <p>Tu tienda de licores favorita, ofreciendo la mejor selección de bebidas premium y artesanales.</p>
                            <div class="social-links mt-3">
                                <a href="#" class="text-white me-3"><i class="fab fa-facebook-f"></i></a>
                                <a href="#" class="text-white me-3"><i class="fab fa-instagram"></i></a>
                                <a href="#" class="text-white me-3"><i class="fab fa-twitter"></i></a>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <h5>Enlaces Rápidos</h5>
                            <ul class="list-unstyled">
                                <li><a href="#about"><i class="fas fa-chevron-right me-2"></i>Nosotros</a></li>
                                <li><a href="#products"><i class="fas fa-chevron-right me-2"></i>Productos</a></li>
                                <li><a href="#contact"><i class="fas fa-chevron-right me-2"></i>Contacto</a></li>
                                <li><a asp-controller="Account" asp-action="Login"><i class="fas fa-chevron-right me-2"></i>Iniciar Sesión</a></li>
                            </ul>
                        </div>
                        <div class="col-md-4">
                            <h5>Contacto</h5>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-phone me-2"></i> +57 123 456 7890</li>
                                <li><i class="fas fa-envelope me-2"></i> info@grandmasliqueurs.com</li>
                                <li><i class="fas fa-map-marker-alt me-2"></i> Bogotá, Colombia</li>
                                <li><i class="fas fa-clock me-2"></i> Lun - Sáb: 9:00 AM - 8:00 PM</li>
                            </ul>
                        </div>
                    </div>
                    <hr class="my-4">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <p class="mb-0">&copy; @DateTime.Now.Year - Grandma's Liqueurs. Todos los derechos reservados.</p>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <small>Desarrollado con <i class="fas fa-heart text-danger"></i> para amantes de los licores</small>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @if (User.Identity.IsAuthenticated && User.IsInRole("Cliente"))
    {
        <script>
            $(document).ready(function() {
                // Actualizar contador del carrito al cargar la página
                actualizarContadorCarrito();
                
                // Actualizar contador cada 30 segundos (opcional)
                setInterval(actualizarContadorCarrito, 30000);
            });
            
            function actualizarContadorCarrito() {
                $.ajax({
                    url: '@Url.Action("ContadorCarrito", "Carrito")',
                    type: 'GET',
                    success: function(response) {
                        if (response.totalItems > 0) {
                            $('#carrito-contador').text(response.totalItems).show();
                        } else {
                            $('#carrito-contador').hide();
                        }
                    },
                    error: function() {
                        // En caso de error, no mostrar el contador
                        $('#carrito-contador').hide();
                    }
                });
            }
            
            // Función global para que otros scripts puedan actualizar el contador
            window.actualizarContadorCarrito = actualizarContadorCarrito;
        </script>
    }
    
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
