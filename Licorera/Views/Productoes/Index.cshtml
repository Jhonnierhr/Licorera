@model IEnumerable<Licorera.Models.Producto>

@{
    ViewData["Title"] = "Gestión de Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1><i class="fas fa-wine-bottle me-2"></i>Gestión de Productos</h1>
        <p>Administra el inventario de productos</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Agregar Producto
    </a>
</div>

<div class="table-container">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th><i class="fas fa-wine-bottle me-2"></i>Producto</th>
                    <th><i class="fas fa-dollar-sign me-2"></i>@Html.DisplayNameFor(model => model.Precio)</th>
                    <th><i class="fas fa-boxes me-2"></i>@Html.DisplayNameFor(model => model.Stock)</th>
                    <th><i class="fas fa-tag me-2"></i>@Html.DisplayNameFor(model => model.Categoria)</th>
                    <th><i class="fas fa-calendar me-2"></i>Actualizado</th>
                    <th width="120" class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="icon-wrapper me-3" style="width: 40px; height: 40px;">
                                    <i class="fas fa-wine-glass"></i>
                                </div>
                                <div>
                                    <strong>@Html.DisplayFor(modelItem => item.Nombre)</strong>
                                    @if (!string.IsNullOrEmpty(item.Descripcion))
                                    {
                                        <small class="text-muted d-block">@(item.Descripcion.Length > 50 ? item.Descripcion.Substring(0, 50) + "..." : item.Descripcion)</small>
                                    }
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <i class="fas fa-dollar-sign text-success me-2"></i>
                                <strong class="text-success">$@Html.DisplayFor(modelItem => item.Precio)</strong>
                            </div>
                        </td>
                        <td>
                            @{
                                var stockClass = item.Stock > 50 ? "text-success" : item.Stock > 10 ? "text-warning" : "text-danger";
                                var stockIcon = item.Stock > 50 ? "fas fa-check-circle" : item.Stock > 10 ? "fas fa-exclamation-triangle" : "fas fa-times-circle";
                            }
                            <div class="d-flex align-items-center">
                                <i class="@stockIcon @stockClass me-2"></i>
                                <span class="@stockClass">@Html.DisplayFor(modelItem => item.Stock) unidades</span>
                            </div>
                        </td>
                        <td>
                            <span class="status-badge active">
                                @Html.DisplayFor(modelItem => item.Categoria.Nombre)
                            </span>
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <i class="fas fa-calendar text-muted me-2"></i>
                                @(item.UpdatedAt?.ToString("dd/MM/yyyy") ?? item.CreatedAt?.ToString("dd/MM/yyyy") ?? "N/A")
                            </div>
                        </td>
                        <td class="text-center">
                            <div class="action-buttons">
                                <a asp-action="Details" asp-route-id="@item.ProductoId" 
                                   class="btn btn-sm btn-outline-info" title="Ver detalles">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.ProductoId" 
                                   class="btn btn-sm btn-outline-primary" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ProductoId" 
                                   class="btn btn-sm btn-outline-danger" title="Eliminar">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center mt-5">
        <div class="mb-3">
            <i class="fas fa-wine-bottle text-muted" style="font-size: 4rem;"></i>
        </div>
        <h4 class="text-muted">No hay productos registrados</h4>
        <p class="text-muted">Comienza agregando tu primer producto al inventario</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Agregar Primer Producto
        </a>
    </div>
}
